cc:= gcc
CFLAG:= -Wall
LDFLAGS:=
SERVER_OBJECTFILES:= server.o rdwrn.o
SERVER_TARGET:= server
CLIENT_OBJECTFILES:= client.o rdwrn.o
CLIENT_TARGET:= client

all: $(SERVER_TARGET) $(CLIENT_TARGET)

$(SERVER_TARGET): $(SERVER_OBJECTFILES)
	$(CC) $(CFLAG) -o $(SERVER_TARGET) $(SERVER_OBJECTFILES) $(LDFLAGS)

$(CLIENT_TARGET): $(CLIENT_OBJECTFILES)
	$(CC) $(CFLAG) -o $(CLIENT_TARGET) $(CLIENT_OBJECTFILES) $(LDFLAGS)

clean:
	rm -f $(SERVER_TARGET) $(SERVER_OBJECTFILES) \
	$(CLIENT_TARGET) $(CLIENT_OBJECTFILES)
