CC:= gcc
CFLAG:= -o
LDFLAGS:= 

CLIENT_OBJECTFILES:= client/client.o
SERVER_OBJECTFILES:= server/server.o 
CLIENT_TARGET:= client/client
SERVER_TARGET:= server/server

all: $(CLIENT_TARGET) $(SERVER_TARGET) 

$(CLIENT_TARGET): $(CLIENT_OBJECTFILES)
	$(CC) $(CFLAG) $(CLIENT_TARGET) $(CLIENT_OBJECTFILES) $(LDFLAGS)

$(SERVER_TARGET): $(SERVER_OBJECTFILES)
	$(CC) $(CFLAG) $(SERVER_TARGET) $(SERVER_OBJECTFILES) $(LDFLAGS)

clean:
	rm -f $(SERVER_TARGET) $(SERVER_OBJECTFILES) \
			$(CLIENT_TARGET) $(CLIENT_OBJECTFILES)